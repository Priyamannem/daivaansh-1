{
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/downloads/(.*).pdf",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/pdf"
                },
                {
                    "key": "Content-Disposition",
                    "value": "attachment"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/downloads/(.*)",
            "destination": "/downloads/$1"
        },
        {
            "source": "/((?!downloads|assets|favicon|logo).*)",
            "destination": "/index.html"
        }
    ]
}