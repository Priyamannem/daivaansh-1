{
    "version": 2,
    "buildCommand": "git lfs pull && npm run build",
    "cleanUrls": true,
    "headers": [
        {
            "source": "/legal/(.*).pdf",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/pdf"
                },
                {
                    "key": "Content-Disposition",
                    "value": "inline"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/legal/:match*",
            "destination": "/legal/:match*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}